<Window x:Class="lab02.salidas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab02"
        mc:Ignorable="d"
        Title="salidas" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Datos Ingresados" Margin="5" FontWeight="Bold" FontSize="18"/>
            <TextBlock x:Name="txtDatos" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnaceptar" 
    Content="INGRESAR DATOS"
    Foreground="White"
    FontSize="12"
    Background="Teal"
    FontFamily="Montserrat"
    Margin="5" Click="btnaceptar_Click"
   />
                <Button x:Name="btnsalir" 
     Content="SALIR"
     Foreground="White"
     FontSize="12"
     Background="Red"
     HorizontalAlignment="Left"
     FontFamily="Montserrat" 
     Margin="5" Click="btnsalir_Click"
    />


            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
